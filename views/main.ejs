<body>
    <nav class="navbar navbar-dark bg-dark ">
        <div class="container">
            <a class="navbar-brand " href="">Bienvenue !</a>
        </div>
    </nav>
    <section class="collector container-sm mt-5">
        <% if (success.length) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <% } %>


                <% if (error.length) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                    <% } %>
                        <h1 class="display-4 mb-5">Calculer votre Moyenne</h1>
                        <div class="alert alert-danger alert_vide d-none" role="alert">
                            Eshec de validation ! Esseyer d'entrer des donnes valides
                        </div>
                        <div class="row">
                            <div class="form col-md-4">
                                <div class="form-group">
                                    <label for="nom">Nom du matiere</label>
                                    <input type="text" class="form-control" id="nom" aria-describedby="Nom du matiere">
                                </div>
                                <div class="form-group">
                                    <label for="regime">Choisir votre regime</label>
                                    <select id="regime" class="form-control">
                                        <option value="r1">Note 1 * 0.1 + Note 2 * 0.2 + Note 3 * 0.7</option>
                                        <option value="r2">Note 1 * 0.2 + Note 2 * 0.4 + Note 3 * 0.4</option>
                                        <option value="r3">Note 1 * 0.3 + Note 2 * 0.7</option>
                                        <option value="r4">(Note 1 + Note 2 + Note 3 * 2)/4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="coff">Coefficient</label>
                                    <input type="text" class="form-control" id="coff" aria-describedby="Cofficient">
                                </div>
                                <div class="form-group">
                                    <label for="n1">Note 1</label>
                                    <input type="text" class="form-control" id="n1" aria-describedby="Note 1">
                                    <small class="form-text text-muted">Si vous ne savez pas le note Laissez-le
                                        10</small>
                                </div>
                                <div class="form-group">
                                    <label for="n2">Note 2</label>
                                    <input type="text" class="form-control" id="n2" aria-describedby="Note 2">
                                </div>
                                <div class="form-group">
                                    <label for="n3">Note 3</label>
                                    <input type="text" class="form-control" id="n3" aria-describedby="Note 3">
                                </div>
                                <button id="ajout" type="button" class="btn btn-success">Ajouter</button>
                                <button id="maj" type="button" class="btn btn-info d-none">Maj</button>
                                <button id="anul" type="button" class="btn btn-danger">Anuler</button>
                            </div>
                            <div class="col-md-8 mt-5 mt-md-0 list d-table">
                                <table class="table mb-3">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Num</th>
                                            <th scope="col">Nom</th>
                                            <th scope="col">Regime</th>
                                            <th scope="col">Coefficient</th>
                                            <th scope="col">Note_1</th>
                                            <th scope="col">Note_2</th>
                                            <th scope="col">Note_3</th>
                                            <th scope="col">Moyenne</th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                                <div class="form-group w-50">
                                    <label for="mg">Moyenne generale</label>
                                    <output type="text" class="form-control" id="mg"
                                        aria-describedby="Moyenne generale">
                                </div>
                                <a href="" id="clear" class="btn btn-outline-dark">Clear</a>
                            </div>
                        </div>
    </section>
    <footer class="bg-dark mt-5 text-white">
        <div class="container p-4">
            <section class="mb-4 text-center">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/aliabdelkader.aidi"
                    role="button"><i class="fab fa-facebook-f"></i></a>

                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://twitter.com/AliAydi10" role="button"><i
                        class="fab fa-twitter"></i></a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/aliabdelkaderaydi/"
